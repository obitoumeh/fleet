mixin checkbox(text, checked, counter)
	label.checkbox
		if checked
			input.checkbox__input(type="checkbox" checked)
		else
			input.checkbox__input(type="checkbox")
		span.checkbox__inner
			span.checkbox__tick
			if counter
				span.checkbox__flex
					span.checkbox__text=text
					span.checkbox__counter=counter
			else
				span.checkbox__text=text

mixin radio(text, name, checked)
	label.radio
		if checked
			input.radio__input(type="radio" name=name checked)
		else
			input.radio__input(type="radio" name=name)
		span.radio__inner
			span.radio__tick
			span.radio__text=text

mixin switch(checked)
	label.switch
		if checked
			input.switch__input(type="checkbox" checked)
		else
			input.switch__input(type="checkbox")
		span.switch__inner
			span.switch__box

