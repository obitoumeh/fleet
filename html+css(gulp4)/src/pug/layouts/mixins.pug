mixin daterange(classDateRange, formatDate, icon, placeholderFrom, placeholderTo, descriptionFrom, descriptionTo)
	.datepicker.js-date-range(data-format=formatDate class=classDateRange data-container=".datepicker")
		.datepicker__list
			.datepicker__item
				input.datepicker__input.js-date-from(type="text" placeholder=placeholderFrom readonly)
				.datepicker__icon
					+i(icon)
				if descriptionFrom
					.datepicker__description=descriptionFrom
			.datepicker__item
				input.datepicker__input.js-date-to(type="text" placeholder=placeholderTo readonly)
				.datepicker__icon
					+i(icon)
				if descriptionTo
					.datepicker__description=descriptionTo

mixin datesingle(classDateSingle, formatDate, single, icon, placeholder, description)
	.datepicker(class=classDateSingle)
		.datepicker__item
			input.datepicker__input.js-date-single(data-format=formatDate data-single=single data-container=".datepicker" type="text" placeholder=placeholder readonly)
			.datepicker__icon
				+i(icon)
			if description
				.datepicker__description=description

mixin card(url, srcSet, src, classCategory, category, title, old, actual, icon1, option1, icon2, option2, cost, rating, reviews, comment, avatar, classCard)
	a.card(href=url class=classCard)
		.card__preview
			img(srcSet=`${srcSet} 2x` src=src alt=title)
			if category
				div(class=classCategory)=category
		.card__body
			.card__line
				.card__title=title
				.card__price
					.card__old=old
					.card__actual=actual
			.card__options
				if option1
					.card__option
						+i(icon1)
						=option1
				if option2
					.card__option
						+i(icon2)
						=option2
			.card__foot
				if comment
					.card__comment
						.card__avatar
							img(src=avatar alt="Avatar")
						.card__text=comment
				.card__flex
					.card__cost=cost
					.card__rating
						+i('star')
						.card__number=rating
						.card__reviews (
							=reviews
							|  reviews)

