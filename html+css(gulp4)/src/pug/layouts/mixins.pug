mixin location(classLocation, icon, placeholder, description)
	.location.js-location(class=classLocation)
		.location__head.js-location-head
			.location__icon
				+i(icon)
			input.location__input.js-location-input(type="text" name="location" autocomplete="off" placeholder=placeholder)
			if description
				.location__description=description
			button.location__clear.js-location-clear
				+i('close-circle') 
		.location__body.js-location-body
			.location__list
				a.location__item.js-location-item(href='#') New York, NY
