extends layouts/layout
block content
	.section.main.main_tasks
		.main__center.center
			.main__preview
				picture
					source(media="(max-width: 767px)" srcSet="img/content/main-pic-mobile-5.jpg")
					img(src="img/content/main-pic-5.jpg" alt="Main")
				.main__wrap
					h1.main__title.hero Things to do
					.main__info.info Find and book a great experience.
					a.button.main__button(href="category.html") Start your search
			.panel.panel_tasks
				.panel__background
				.panel__nav
					a.panel__link(href="index.html") Stays
					a.panel__link(href="flights.html") Flights
					a.panel__link(href="cars.html") Cars
					a.panel__link.active(href="things-to-do.html") Things to do
				.panel__body
					.panel__row
						+location("", "location", "Location", "Where are you going?")
						+datesingle("", "MMM DD, YYYY", true, "calendar", "Date", "Add date")
						+travelers("", "user", "Travelers", "Add guests")
						a.panel__search(href="category.html")
							+i('search')
	include partials/adventure
	include partials/travel
	include partials/work
	include partials/live
	include partials/planning
	include partials/places
	include partials/hosts
	.section.categories
		.categories__center.center
			.categories__inner
				.categories__head
					h2.categories__title.h2 Browse by category
					.categories__info.info Let’s go on an adventure
				.categories__wrapper
					.categories__slider.js-slider-categories
						mixin item(url, counter, icon, subtitle, content)
							a.categories__item(href=url)
								.status.categories__counter=counter
								.categories__icon
									+i(icon)
								.categories__subtitle=subtitle 
								.categories__content=content
