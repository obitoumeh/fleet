	.popup.popup_login.mfp-hide#popup-login
		.login
			.login__item
				.login__title.h3 Sign up on Fleet
				.login__info Use Your OpenID to Sign up
				.login__btns
					button.button.login__button
						+i('google')
						span Google
					button.button-black.login__button
						+i('apple')
						span Apple
				.login__note Or continue with email
				.subscription
					input.subscription__input(type="email" name="email" placeholder="Enter your email" required)
					button.subscription__btn
						+i('arrow-next')
				.login__foot Already have an account? <a class="login__link" href="#">Login</a>
			.login__item
				.login__title.h3 Sign in
				.login__form
					.field.field_view
						.field__wrap
							input.field__input(type="password" name="password" placeholder="Password" required)
							button.field__view
								+i('eye')
					button.button.login__button Login
				.login__foot
					a.login__password(href="#") Forgot password?
			.login__item
				.login__title.h3 Let’s confirm it’s really you
				.login__info Help us secure your account. Please complete the verifications below
				.login__form
					.login__variants
						+radio("Get the code by text message (SM) at +1 234 567 890", "login", true)
						+radio("Get the code by email at tranm••••••••••••@gm•••.com", "login", false)
					button.button.login__button Continue
			.login__item
				.login__title.h3 Enter your security code
				.login__info We texted your code to +1 234 567 890
				.login__form
					.login__code
						.login__number
							input(type="tel")
						.login__number
							input(type="tel")
						.login__number
							input(type="tel")
						.login__number
							input(type="tel")