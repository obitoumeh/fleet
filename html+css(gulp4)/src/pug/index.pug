placesInfo: 10,789 beautiful places to go
---
extends layouts/layout
block content
	.section.main.main_stays
		.main__center.center
			.main__preview
				picture
					source(media="(max-width: 767px)" srcSet="img/content/main-pic-mobile-1.jpg")
					img(src="img/content/main-pic-1.jpg" alt="Main")
				.main__wrap
					h1.main__title.hero Air, sleep, dream
					.main__info.info Find and book a great experience.
					a.button.main__button(href="stays-category.html") Start your search
			.panel.panel_stays
				.panel__background
				.panel__nav
					a.panel__link.active(href="index.html") Stays
					a.panel__link(href="flights.html") Flights
					a.panel__link(href="cars.html") Cars
					a.panel__link(href="things-to-do.html") Things to do
				.panel__body
					.panel__row
						+location("", "location", "Location", "Where are you going?")
						+daterange("", "MMM DD, YYYY", "calendar", "Check in", "Check out", "Add date", "Add date")
						+travelers("", "user", "Travelers", "Add guests")
						a.panel__search(href="stays-category.html")
							+i('search')
	include partials/adventure
	include partials/travel
	include partials/work
	include partials/live
	include partials/travels
	include partials/planning
	.section.browse
		.browse__center.center
			.browse__inner
				.browse__head
					h2.browse__title.h2 Explore nearby
					.browse__info.info Let’s go on an adventure
				.browse__wrapper
					.browse__slider.js-slider-browse
						mixin slide(srcSet, src, category, subtitle, content)
							a.browse__card(href="stays-category.html")
								.browse__preview
									img(srcSet=`${srcSet} 2x` src=src alt="Card")
									.status-black.browse__category=category
								.browse__subtitle=subtitle 
								.browse__content
									+i('home')
									=content
						+slide("img/content/browse-pic-1.jpg", "img/content/browse-pic-1@2x.jpg", "20% off", "Nature house", "650,111")
						+slide("img/content/browse-pic-2.jpg", "img/content/browse-pic-2@2x.jpg", "from $230", "Nature house", "664,423")
						+slide("img/content/browse-pic-3.jpg", "img/content/browse-pic-3@2x.jpg", "30% off", "Nature house", "324,565")
						+slide("img/content/browse-pic-4.jpg", "img/content/browse-pic-4@2x.jpg", "from $190", "Nature house", "443,879")
						+slide("img/content/browse-pic-1.jpg", "img/content/browse-pic-1@2x.jpg", "20% off", "Nature house", "650,111")
						+slide("img/content/browse-pic-2.jpg", "img/content/browse-pic-2@2x.jpg", "from $230", "Nature house", "664,423")
						+slide("img/content/browse-pic-3.jpg", "img/content/browse-pic-3@2x.jpg", "20% off", "Nature house", "324,565")
	include partials/places
	include partials/hosts
	include partials/view
	.section.categories
		.categories__center.center
			.categories__inner
				.categories__head
					h2.categories__title.h2 Browse by category
					.categories__info.info Let’s go on an adventure
				.categories__wrapper
					.categories__slider.js-slider-categories
						mixin item(url, counter, icon, subtitle, content)
							a.categories__item(href=url)
								.status.categories__counter=counter
								.categories__icon
									+i(icon)
								.categories__subtitle=subtitle 
