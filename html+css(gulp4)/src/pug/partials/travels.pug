			.travels__list
				mixin card(srcSet, src, location)
					a.travels__card(href="stays-product.html")
						.travels__preview
							img(srcSet=`${srcSet} 2x` src=src alt="Card")
						.travels__body
							.travels__line
								.travels__details
									.travels__subtitle The grand resort
									.travels__location=location 
								.travels__price
									.travels__old $356
									.travels__actual $267
							.travels__line
								.travels__date Tue, Jul 20 - Fri, Jul 23
								.travels__rating
									+i('star')
									| 4.9
				+card("img/content/catalog-pic-1.jpg", "img/content/catalog-pic-1@2x.jpg", "Karineside")
